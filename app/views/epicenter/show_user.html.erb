<h1>@<%= @user.username %>'s Profile & tweets</h1>

<p>
	<%= @user.name%>


</p>

<p>
	<%= @user.location %>


</p>

<p>
	<%= @user.bio %>


</p>

<p>
	<% if current_user.following.include?(@user.id) %>
		<%= link_to "Following", unfollow_path(id: @user.id), class: "btn btn-light", id: "unfollow-btn" %>
	<% else %>
		<% if current_user.id != @user.id %>
			<%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-light" %>
		<% end %>
	<% end %>

</p>

<% @user.tweets.each do |tweet| %>
	
	<p>@<%= link_to @user.username, show_user_path(id: tweet.user.id) %></p>
	<p><%= tweet.message.html_safe %></p>

<% end %>